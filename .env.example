# ===========================
# Application Configuration
# ===========================

# Environment
NODE_ENV=development

# Application Host and Port
HOST=127.0.0.1
PORT=4000

# Application URLs
NEXT_PUBLIC_APP_URL=http://127.0.0.1:4000
NEXT_PUBLIC_API_URL=http://127.0.0.1:4000/api

# ===========================
# WebSocket Configuration
# ===========================

# WebSocket Host
WS_HOST=127.0.0.1

# WebSocket Ports
WS_SYSTEM_PORT=4001
WS_CLAUDE_PORT=4002

# ===========================
# Storage Configuration
# ===========================

# Terminal Sessions Storage
TERMINAL_STORAGE_PATH=./storage/terminal-sessions

# Temporary Files
TEMP_PATH=./storage/temp

# Logs Directory
LOGS_PATH=./logs

# Cache Directory
CACHE_PATH=./.cache

# ===========================
# Terminal Configuration
# ===========================

# Maximum number of terminal sessions
MAX_TERMINAL_SESSIONS=50

# Terminal session timeout (in milliseconds)
TERMINAL_SESSION_TIMEOUT=1800000

# Terminal cleanup interval (in milliseconds)
TERMINAL_CLEANUP_INTERVAL=300000

# ===========================
# Database Configuration
# ===========================

# Database URL (PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Database Connection Settings
DATABASE_TIMEOUT=5000
DATABASE_CONNECTION_POOL_SIZE=10
DATABASE_MAX_CONNECTIONS=50

# ===========================
# Authentication Configuration
# ===========================

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here

# Token expiry times
AUTH_ACCESS_TOKEN_EXPIRY=15m
AUTH_REFRESH_TOKEN_EXPIRY=7d
AUTH_SESSION_EXPIRY=7d

# Login behavior
AUTH_REMEMBER_ME_ENABLED=true
AUTH_REMEMBER_ME_DURATION=30d

# Account security
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=30
AUTH_PASSWORD_MIN_LENGTH=8
AUTH_REQUIRE_EMAIL_VERIFICATION=false

# ===========================
# Claude Configuration
# ===========================

# Claude Real-time Mode
CLAUDE_REALTIME=false

# Claude API Key (optional)
CLAUDE_API_KEY=

# ===========================
# NextAuth Configuration (Optional)
# ===========================

NEXTAUTH_URL=http://localhost:4000
NEXTAUTH_SECRET=your-nextauth-secret-here

# ===========================
# Project Defaults
# ===========================

# Default project path
DEFAULT_PROJECT_PATH=./workspace