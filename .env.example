# Database
DATABASE_URL="postgresql://username:password@127.0.0.1:5432/cms_db"

# App Configuration
PORT=4000
NEXT_PUBLIC_SITE_URL="http://127.0.0.1:4000"
NEXT_PUBLIC_API_URL="http://127.0.0.1:4000/api"
NEXT_PUBLIC_WEBSOCKET_URL="ws://127.0.0.1:4000"

# NextAuth
NEXTAUTH_SECRET="your-super-secure-nextauth-secret-min-32-chars-change-this"
NEXTAUTH_URL="http://127.0.0.1:4000"

# Security
JWT_SECRET="your-super-secure-jwt-secret-min-32-chars-change-this"
ENCRYPTION_KEY="your-aes-256-encryption-key-32-chars-change-this"
BCRYPT_ROUNDS=12

# Security Features
ENABLE_MFA=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=1800000

# Session
SESSION_TIMEOUT=86400000

# GDPR/Data Protection
ENABLE_DATA_RETENTION=true
DEFAULT_RETENTION_DAYS=2555
ENABLE_ANONYMIZATION=true

# Feature Toggles
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_SOCIAL_LOGIN=false

# WebSocket
WEBSOCKET_PORT=4000
NEXT_PUBLIC_WEBSOCKET_ENABLED=false

# Optional: Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@yoursite.com"

# Optional: Redis Configuration
REDIS_URL="redis://localhost:6379"

# Optional: File Upload
UPLOAD_MAX_SIZE="10485760"
UPLOAD_ALLOWED_TYPES="image/*,application/pdf"