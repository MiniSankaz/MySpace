# ===========================
# Application Configuration
# ===========================

# Environment
NODE_ENV=development

# Application Host and Port
HOST=127.0.0.1
PORT=4110

# Application URLs
NEXT_PUBLIC_APP_URL=http://127.0.0.1:4110
NEXT_PUBLIC_API_URL=http://127.0.0.1:4110/api

# ===========================
# WebSocket Configuration
# ===========================

# WebSocket Host
WS_HOST=127.0.0.1

# WebSocket Ports
WS_SYSTEM_PORT=4001
WS_CLAUDE_PORT=4002

# ===========================
# Storage Configuration
# ===========================

# Terminal Sessions Storage
TERMINAL_STORAGE_PATH=./storage/terminal-sessions

# Temporary Files
TEMP_PATH=./storage/temp

# Logs Directory
LOGS_PATH=./logs

# Cache Directory
CACHE_PATH=./.cache

# ===========================
# Terminal Configuration
# ===========================

# Terminal WebSocket Configuration
TERMINAL_WS_PORT=4001
CLAUDE_WS_PORT=4002
WS_TIMEOUT=5000
WS_RECONNECT_ATTEMPTS=3
WS_RECONNECT_DELAY=1000

# Memory Management
MEMORY_RSS_WARNING=2048
MEMORY_RSS_EMERGENCY=6144
MEMORY_HEAP_WARNING=4110
MAX_TERMINAL_SESSIONS=50
MAX_SESSIONS_PER_PROJECT=20
MAX_FOCUSED_PER_PROJECT=10
MEMORY_CLEANUP_INTERVAL=300000
MEMORY_EMERGENCY_CHECK=120000
SESSION_TIMEOUT=300000

# Rate Limiting
MAX_TERMINAL_CREATIONS_PER_MIN=10
CIRCUIT_BREAKER_RESET=300000

# Project Switching
TERMINAL_SWITCH_DEBOUNCE=500
QUEUE_PROCESS_DELAY=100
OPERATION_QUEUE_DELAY=50

# Suspension Settings
MAX_SUSPENSION_TIME=1800000
SUSPENSION_CLEANUP_INTERVAL=600000
MAX_RESUME_ATTEMPTS=3
BUFFERED_OUTPUT_LIMIT=1000

# Terminal Naming
TERMINAL_NAME_PREFIX=Terminal
TERMINAL_NAME_SEPARATOR=" "

# Activity Tracking
BACKGROUND_CHECK_INTERVAL=2000
ACTIVITY_TIMEOUT=300000

# Terminal session timeout (in milliseconds)
TERMINAL_SESSION_TIMEOUT=1800000

# Terminal cleanup interval (in milliseconds)
TERMINAL_CLEANUP_INTERVAL=300000

# ===========================
# Database Configuration
# ===========================

# Database URL (PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Database Connection Settings
DATABASE_TIMEOUT=5000
DATABASE_CONNECTION_POOL_SIZE=10
DATABASE_MAX_CONNECTIONS=50

# ===========================
# Authentication Configuration
# ===========================

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here

# Token expiry times
AUTH_ACCESS_TOKEN_EXPIRY=15m
AUTH_REFRESH_TOKEN_EXPIRY=7d
AUTH_SESSION_EXPIRY=7d

# Login behavior
AUTH_REMEMBER_ME_ENABLED=true
AUTH_REMEMBER_ME_DURATION=30d

# Account security
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=30
AUTH_PASSWORD_MIN_LENGTH=8
AUTH_REQUIRE_EMAIL_VERIFICATION=false

# ===========================
# Claude Configuration
# ===========================

# Claude Real-time Mode
CLAUDE_REALTIME=false

# Claude API Key (optional)
CLAUDE_API_KEY=

# ===========================
# NextAuth Configuration (Optional)
# ===========================

NEXTAUTH_URL=http://localhost:4110
NEXTAUTH_SECRET=your-nextauth-secret-here

# ===========================
# Project Defaults
# ===========================

# Default project path
DEFAULT_PROJECT_PATH=./workspace