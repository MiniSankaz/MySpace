# Local SQLite Configuration (ใช้งานจริงบนเครื่องตัวเอง)
NODE_ENV=production
PORT=4000

# URLs
NEXT_PUBLIC_APP_URL=http://localhost:4000
NEXT_PUBLIC_API_URL=http://localhost:4000/api
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:4000

# SQLite Database (ข้อมูลเก็บในไฟล์ local.db)
DATABASE_URL="file:./local.db"

# Security (generate ใหม่ด้วย: openssl rand -base64 32)
JWT_SECRET=local-jwt-secret-change-this
NEXTAUTH_SECRET=local-nextauth-secret-change-this

# Features
ENABLE_AI=true
ENABLE_SIGNUP=true
MAX_UPLOAD_SIZE=10485760

# Optional: Claude AI
# CLAUDE_API_KEY=sk-ant-api03-xxx