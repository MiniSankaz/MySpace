# Service Configuration
PORT=4192
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/code_marking

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AI Orchestrator
AI_ORCHESTRATOR_URL=http://localhost:4191

# Project Configuration
PROJECT_ROOT=/Volumes/Untitled/Progress/port

# Indexing Configuration
INDEX_BATCH_SIZE=50
MAX_FILE_SIZE=1048576
# 1MB max file size for indexing

# Agent Configuration
MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT=300000
# 5 minutes timeout
AGENT_RETRY_ATTEMPTS=3
AGENT_RETRY_DELAY=5000

# Marking Configuration
COMPLEXITY_THRESHOLD=10
DUPLICATE_THRESHOLD=0.8
MIN_DUPLICATE_LINES=10

# Refactoring Configuration
AUTO_APPROVE_REFACTORING=false
MAX_CHANGES_PER_FILE=10
REQUIRE_REVIEW=true

# File Watcher
ENABLE_FILE_WATCHER=true
WATCHER_DEBOUNCE=1000

# Queue Configuration
QUEUE_CONCURRENCY=3
DEFAULT_PRIORITY=5

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=false
LOG_DIR=./logs

# Performance
ENABLE_METRICS=false
METRICS_PORT=9090
PROFILE_MEMORY=false