# AI Assistant Service Configuration

# Server Configuration
NODE_ENV=development
PORT=4130
SERVICE_NAME=ai-assistant

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/stock_portfolio_db?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Claude AI Configuration
# USE_CLAUDE_CLI=true (default) uses Claude CLI instead of API
# Set to false to use API with CLAUDE_API_KEY
USE_CLAUDE_CLI=true
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-sonnet-20240229
MAX_TOKENS=4096

# Terminal Service Configuration (for CLI mode)
TERMINAL_SERVICE_URL=http://localhost:4140

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:4110

# Logging Configuration
LOG_LEVEL=info

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_KEY_PREFIX=ai-assistant:
REDIS_TTL=3600

# API Keys (for service-to-service communication)
API_KEY=your-internal-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# File Upload Limits
MAX_FILE_SIZE=10mb

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Performance Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=60000

# Security
ENABLE_HELMET=true
ENABLE_CORS=true
TRUST_PROXY=false